<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @task.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @task.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completion_date) %>:</strong></dt>
  <dd><%= @task.completion_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @task.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:money_available) %>:</strong></dt>
  <dd><%= @task.money_available %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Back", show_tasks_path(:id => @task.goal_id), :class => 'btn', :remote => true  %>
  <%= link_to "Edit", edit_task_path(@task), :class => 'btn', :remote => true  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  task_path(@task),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
</div>
